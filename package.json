{
  "name": "@kokitotsos/react-components",
  "version": "1.2.9",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/react-components.git"
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:styleguide",
    "build:lib": "rollup -c rollup-config.js",
    "build:styleguide": "styleguidist build --config styleguide/styleguidist-config.js",
    "clean": "rimraf .cache dist dist-styleguide",
    "format": "prettier \"src/**/*.{js,json,jsx,md,ts,tsx}\" --write",
    "icons": "svgr -d src/icons resources/icons --template resources/SvgrTemplate.js --ext tsx --icon",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:css": "stylelint \"./src/**/*.tsx\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.prod.json",
    "precommit": "lint-staged",
    "prepush": "yarn lint",
    "start": "styleguidist server --config styleguide/styleguidist-config.js",
    "test": "yarn lint",
    "watch": "node ./rollup-watch.js"
  },
  "devDependencies": {
    "@svgr/cli": "4.1.0",
    "@types/node": "10.12.21",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-transition-group": "2.0.15",
    "@types/styled-components": "4.1.8",
    "awesome-typescript-loader": "5.2.1",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-preset-react": "6.24.1",
    "dotenv": "^6.2.0",
    "file-loader": "3.0.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.3",
    "ncp": "^2.0.0",
    "prettier": "1.16.4",
    "react-docgen-typescript": "1.12.3",
    "react-styleguidist": "8.0.6",
    "rimraf": "2.6.3",
    "rollup": "1.1.2",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-image": "1.0.2",
    "rollup-plugin-img": "1.1.0",
    "rollup-plugin-typescript2": "0.19.2",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "3.3.3",
    "webpack": "4.29.3",
    "webpack-dev-server": "3.1.14"
  },
  "optionalDependencies": {
    "date-fns": "1.30.1",
    "mapbox-gl": "0.53.0",
    "normalize.css": "8.0.1",
    "polished": "2.3.3",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "react-mapbox-gl": "4.2.0",
    "react-transition-group": "2.5.3",
    "styled-components": "4.1.3"
  },
  "peerDependencies": {
    "date-fns": ">=1.30",
    "mapbox-gl": ">=0.53",
    "normalize.css": ">=8.0",
    "polished": ">=2.3",
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "react-mapbox-gl": ">=4.2",
    "react-transition-group": ">=2.5",
    "styled-components": ">=4.1"
  },
  "babel": {
    "presets": [
      "react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "pre-push": "yarn prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  },
  "svgr": {
    "replaceAttrValues": {
      "1em": "24",
      "#000": "inherit",
      "none": "inherit"
    }
  }
}
