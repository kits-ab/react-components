{
  "name": "@kokitotsos/react-components",
  "version": "1.3.3",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/react-components.git"
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:styleguide",
    "build:lib": "rollup -c rollup-config.js",
    "build:styleguide": "styleguidist build --config styleguide/styleguidist-config.js",
    "clean": "rimraf .cache dist dist-styleguide",
    "format": "prettier \"src/**/*.{js,json,jsx,md,ts,tsx}\" --write",
    "icons": "svgr -d src/icons resources/icons --template resources/SvgrTemplate.js --ext tsx --icon",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:css": "stylelint \"./src/**/*.tsx\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.prod.json",
    "precommit": "lint-staged",
    "prepush": "yarn lint",
    "start": "styleguidist server --config styleguide/styleguidist-config.js",
    "test": "yarn lint",
    "watch": "node ./rollup-watch.js"
  },
  "devDependencies": {
    "@svgr/cli": "4.3.2",
    "@types/node": "12.7.4",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-transition-group": "4.2.2",
    "@types/styled-components": "4.1.19",
    "awesome-typescript-loader": "5.2.1",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-preset-react": "6.24.1",
    "css-loader": "3.2.0",
    "dotenv": "8.1.0",
    "file-loader": "4.2.0",
    "husky": "3.0.5",
    "lint-staged": "9.2.5",
    "ncp": "2.0.0",
    "prettier": "1.18.2",
    "react-docgen-typescript": "1.14.0",
    "react-styleguidist": "9.1.16",
    "rimraf": "3.0.0",
    "rollup": "1.21.2",
    "rollup-plugin-filesize": "6.2.0",
    "rollup-plugin-image": "1.0.2",
    "rollup-plugin-img": "1.1.0",
    "rollup-plugin-typescript2": "0.24.1",
    "style-loader": "1.0.0",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.8.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.0.0",
    "typescript": "3.6.3",
    "webpack": "4.39.3",
    "webpack-dev-server": "3.8.0"
  },
  "optionalDependencies": {
    "date-fns": "2.1.0",
    "mapbox-gl": "0.54.1",
    "normalize.css": "8.0.1",
    "polished": "3.4.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-mapbox-gl": "4.6.0",
    "react-transition-group": "4.3.0",
    "styled-components": "4.3.2"
  },
  "peerDependencies": {
    "date-fns": ">=2.1",
    "mapbox-gl": ">=0.55",
    "normalize.css": ">=8.0",
    "polished": ">=3.4",
    "react": ">=16.9",
    "react-dom": ">=16.9",
    "react-mapbox-gl": ">=4.6",
    "react-transition-group": ">=4.3",
    "styled-components": ">=4.3"
  },
  "babel": {
    "presets": [
      "react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "pre-push": "yarn prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  },
  "svgr": {
    "replaceAttrValues": {
      "1em": "24",
      "#000": "inherit",
      "none": "inherit"
    }
  }
}
