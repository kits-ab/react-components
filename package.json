{
  "name": "@kokitotsos/react-components",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/react-components.git"
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:styleguide",
    "build:lib": "rollup -c rollup-config.cjs.js && rollup -c rollup-config.es.js && rollup -c rollup-config.umd.js",
    "build:styleguide": "styleguidist build --config styleguide/styleguidist-config.js",
    "clean": "rimraf .cache dist dist-styleguide",
    "format": "prettier \"src/**/*.{js,json,jsx,md,ts,tsx}\" --write",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:css": "stylelint \"./src/**/*.tsx\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.prod.json",
    "precommit": "lint-staged",
    "prepush": "yarn lint",
    "start": "styleguidist server --config styleguide/styleguidist-config.js",
    "watch": "rollup -c rollup-config.cjs.js -w"
  },
  "devDependencies": {
    "@types/node": "^10.9.4",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-transition-group": "^2.0.14",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-react": "^6.24.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react-docgen-typescript": "^1.8.1",
    "react-styleguidist": "^7.3.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.2",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-css-only": "^0.4.0",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-dev-server": "^3.1.8"
  },
  "optionalDependencies": {
    "date-fns": "^1.29.0",
    "normalize.css": "^8.0.0",
    "polished": "^2.0.3",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-transition-group": "^2.4.0",
    "styled-components": "^3.4.6"
  },
  "peerDependencies": {
    "date-fns": ">=1.29",
    "normalize.css": ">=8.0",
    "polished": ">=2.0",
    "react": ">=16.5",
    "react-dom": ">=16.5",
    "react-transition-group": ">=2.4",
    "styled-components": ">=3.4"
  },
  "babel": {
    "presets": [
      "react"
    ]
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  }
}
