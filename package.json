{
  "name": "@kokitotsos/react-components",
  "version": "3.4.0",
  "license": "Apache-2.0",
  "main": "dist/react-components.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/react-components.git"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:styleguide",
    "build:declarations": "rimraf 'dist/**/*.d.ts' && tsc  --emitDeclarationOnly -p tsconfig.declarations.json",
    "build:lib": "npm run build:main && npm run build:module && npm run build:declarations",
    "build:main": "webpack",
    "build:module": "babel src --no-babelrc --config-file './.babelrc.module' --out-dir dist --extensions '.ts,.tsx' --source-maps inline --ignore 'src/**/*.test.ts','src/**/*.stories.tsx'",
    "build:styleguide": "storybook build --docs -o dist-styleguide",
    "clean": "rimraf dist dist-styleguide package *.tgz",
    "format": "prettier 'src/**/*.{js,json,jsx,md,ts,tsx}' --write",
    "icons": "svgr -d src/icons resources/icons --template resources/SvgrTemplate.js --index-template resources/SvgrTemplateIndex.js --ext tsx --typescript --icon",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint './src/**/*.tsx'",
    "lint:js": "eslint --ext '.ts,.tsx' src",
    "package": "npm run clean && npm run build && npm pack",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "start": "storybook dev --docs -p 6006 ",
    "test": "npm run lint && tsc --noEmit"
  },
  "devDependencies": {
    "@babel/cli": "7.22.15",
    "@babel/core": "7.22.15",
    "@babel/eslint-parser": "7.22.15",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.22.15",
    "@babel/preset-react": "7.22.15",
    "@babel/preset-typescript": "7.22.15",
    "@storybook/addon-actions": "7.4.0",
    "@storybook/addon-docs": "7.4.0",
    "@storybook/addon-essentials": "7.4.0",
    "@storybook/addon-links": "7.4.0",
    "@storybook/addons": "7.4.0",
    "@storybook/builder-webpack5": "7.4.0",
    "@storybook/react": "7.4.0",
    "@storybook/react-webpack5": "^7.4.0",
    "@storybook/theming": "7.4.0",
    "@svgr/cli": "8.1.0",
    "@types/mapbox-gl": "2.7.13",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/react-transition-group": "4.4.6",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "babel-loader": "9.1.3",
    "css-loader": "6.8.1",
    "dotenv": "16.3.1",
    "eslint": "8.48.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "ncp": "2.0.0",
    "postcss": "^8.4.29",
    "postcss-styled-components": "^0.2.1",
    "postcss-styled-syntax": "^0.4.0",
    "prettier": "3.0.3",
    "react": "^18.2.0",
    "react-docgen-typescript-plugin": "^1.0.5",
    "react-dom": "^18.2.0",
    "react-is": "18.2.0",
    "rimraf": "5.0.1",
    "storybook": "^7.4.0",
    "style-loader": "3.3.3",
    "stylelint": "15.10.3",
    "stylelint-config-standard": "34.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylis": "^4.3.0",
    "typescript": "5.2.2",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4"
  },
  "optionalDependencies": {
    "date-fns": "2.30.0",
    "mapbox-gl": "2.15.0",
    "normalize.css": "8.0.1",
    "polished": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-map-gl": "7.1.5",
    "react-transition-group": "4.4.5",
    "styled-components": "6.0.7"
  },
  "peerDependencies": {
    "date-fns": ">=2.28",
    "mapbox-gl": ">=2.15",
    "normalize.css": ">=8.0",
    "polished": ">=4.2",
    "react": ">=17.0",
    "react-dom": ">=17.0",
    "react-map-gl": ">=7.1",
    "react-transition-group": ">=4.4",
    "styled-components": ">=5.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "ignorePatterns": [
      "src/icons/*Icon.tsx"
    ],
    "rules": {
      "import/newline-after-import": "error",
      "import/no-anonymous-default-export": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "caseInsensitive": true,
            "order": "asc"
          },
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ],
          "newlines-between": "always"
        }
      ],
      "no-console": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "customSyntax": "postcss-styled-syntax",
    "rules": {
      "custom-property-pattern": null,
      "declaration-colon-newline-after": null,
      "keyframes-name-pattern": null,
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "selector-class-pattern": null,
      "value-keyword-case": null,
      "media-query-no-invalid": null,
      "media-feature-range-notation": null
    }
  },
  "svgr": {
    "replaceAttrValues": {
      "1em": "24",
      "#000": "inherit",
      "none": "inherit"
    }
  }
}
