{
  "name": "@kokitotsos/react-components",
  "version": "1.2.0-beta1",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kits-ab/react-components.git"
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:styleguide",
    "build:lib": "rollup -c rollup-config.js",
    "build:styleguide": "styleguidist build --config styleguide/styleguidist-config.js",
    "clean": "rimraf .cache dist dist-styleguide",
    "format": "prettier \"src/**/*.{js,json,jsx,md,ts,tsx}\" --write",
    "icons": "svgr -d src/icons resources/icons --template resources/SvgrTemplate.js --ext tsx --icon",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:css": "stylelint \"./src/**/*.tsx\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.prod.json",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build:lib",
    "prepush": "yarn lint",
    "start": "styleguidist server --config styleguide/styleguidist-config.js",
    "test": "yarn lint",
    "watch": "rollup -c rollup-config.js -w"
  },
  "devDependencies": {
    "@svgr/cli": "^4.0.3",
    "@types/node": "^10.12.9",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-transition-group": "^2.0.14",
    "@types/styled-components": "^4.1.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-react": "^6.24.1",
    "file-loader": "^2.0.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2",
    "react-docgen-typescript": "^1.12.1",
    "react-styleguidist": "^8.0.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.3",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-image": "^1.0.2",
    "rollup-plugin-img": "^1.1.0",
    "rollup-plugin-typescript2": "^0.18.0",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-dev-server": "^3.1.10"
  },
  "optionalDependencies": {
    "date-fns": "^1.29.0",
    "mapbox-gl": "^0.51.0",
    "normalize.css": "^8.0.1",
    "polished": "^2.3.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-mapbox-gl": "^4.0.2",
    "react-transition-group": "^2.5.0",
    "styled-components": "^4.1.1"
  },
  "peerDependencies": {
    "date-fns": ">=1.29",
    "mapbox-gl": ">=0.51",
    "normalize.css": ">=8.0",
    "polished": ">=2.3",
    "react": ">=16.6",
    "react-dom": ">=16.6",
    "react-mapbox-gl": ">=4.0",
    "react-transition-group": ">=2.5",
    "styled-components": ">=4.1"
  },
  "babel": {
    "presets": [
      "react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "pre-push": "yarn prepush"
    }
  },
  "lint-staged": {
    "*.{js,json,jsx,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null,
      "media-feature-name-no-unknown": null,
      "value-list-max-empty-lines": null
    },
    "syntax": "scss"
  },
  "svgr": {
    "replaceAttrValues": {
      "1em": "24",
      "#000": "inherit",
      "none": "inherit"
    }
  }
}
